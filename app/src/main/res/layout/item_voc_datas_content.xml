<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/item_voc_content_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textColor="@color/text_main"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider18"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_voc_content_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/text_sub"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/item_voc_content_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/item_voc_content_tv_title" />

    <ImageView
        android:id="@+id/item_voc_content_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_close_black_24dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_voc_content_image"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/item_voc_content_image"
        app:layout_constraintTop_toBottomOf="@+id/item_voc_content_image"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/item_voc_content_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="GeÃ¼bt am: 31.03.2020"
        android:textColor="@color/text_sub2"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_voc_content_tv_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/divider3" />

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@+id/item_voc_content_tv_subtitle"
        app:layout_constraintStart_toStartOf="@+id/item_voc_content_tv_date"
        app:layout_constraintTop_toBottomOf="@+id/item_voc_content_tv_subtitle" />

    <View
        android:id="@+id/divider18"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/item_voc_content_tv_date"
        app:layout_constraintStart_toEndOf="@+id/item_voc_content_image"
        app:layout_constraintTop_toTopOf="@+id/item_voc_content_tv_title" />
</androidx.constraintlayout.widget.ConstraintLayout>