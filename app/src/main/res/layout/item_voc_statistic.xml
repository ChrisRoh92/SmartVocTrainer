<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_voc_statistic_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Name des Details"
        android:textColor="@color/text_main"
        app:layout_constraintEnd_toStartOf="@+id/item_voc_statistic_tv_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_voc_statistic_tv_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Detail zu diesem Wert"
        android:textColor="@color/text_sub"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_voc_statistic_tv_title"
        app:layout_constraintStart_toStartOf="@+id/item_voc_statistic_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/item_voc_statistic_tv_title" />

    <TextView
        android:id="@+id/item_voc_statistic_tv_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:gravity="right|center_vertical"
        android:paddingRight="4dp"
        android:text="Wert"
        app:layout_constraintBottom_toBottomOf="@+id/item_voc_statistic_tv_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_voc_statistic_tv_title" />
</androidx.constraintlayout.widget.ConstraintLayout>