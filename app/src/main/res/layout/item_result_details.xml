<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_result_details_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Wert des Details"
        android:textColor="@color/text_main"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/divider19"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_result_details_tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Name des Details"
        android:textColor="@color/text_sub"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_result_details_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/item_result_details_tv_title" />

    <TextView
        android:id="@+id/item_result_details_tv_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+20%"
        android:textColor="@color/text_main"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/item_result_details_imageview_change"
        app:layout_constraintStart_toStartOf="@+id/item_result_details_imageview_change"
        app:layout_constraintTop_toBottomOf="@+id/item_result_details_imageview_change" />

    <ImageView
        android:id="@+id/item_result_details_imageview_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_result_details_tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_result_details_tv_title"
        app:srcCompat="@drawable/ic_arrow_upward_green_24dp" />

    <View
        android:id="@+id/divider19"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/item_result_details_tv_change"
        app:layout_constraintStart_toEndOf="@+id/item_result_details_imageview_change"
        app:layout_constraintTop_toTopOf="@+id/item_result_details_imageview_change" />

</androidx.constraintlayout.widget.ConstraintLayout>