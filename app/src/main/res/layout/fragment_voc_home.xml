<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="84dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:verticalScrollbarPosition="defaultPosition"
                app:cardBackgroundColor="@color/background_cardview"
                app:cardCornerRadius="4dp"
                app:contentPadding="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:text="Allgemeines"
                        android:textColor="@color/text_main"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hier erhälst du allgemeine Infos zum Lernstand"
                        android:textColor="@color/text_sub"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/textView29"
                        app:layout_constraintTop_toBottomOf="@+id/textView29" />

                    <View
                        android:id="@+id/divider22"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView30" />

                    <ProgressBar
                        android:id="@+id/fragment_voc_home_pb_main"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="75"
                        app:layout_constraintEnd_toEndOf="@+id/divider22"
                        app:layout_constraintStart_toStartOf="@+id/divider22"
                        app:layout_constraintTop_toBottomOf="@+id/fragment_voc_home_tv_progress" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 %"
                        android:textColor="@color/text_sub2"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toTopOf="@+id/fragment_voc_home_pb_main"
                        app:layout_constraintStart_toStartOf="@+id/fragment_voc_home_pb_main" />

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 %"
                        android:textColor="@color/text_sub2"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toTopOf="@+id/fragment_voc_home_pb_main"
                        app:layout_constraintEnd_toEndOf="@+id/fragment_voc_home_pb_main" />

                    <TextView
                        android:id="@+id/fragment_voc_home_tv_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="75 %"
                        android:textColor="@color/text_main"
                        app:layout_constraintEnd_toEndOf="@+id/fragment_voc_home_pb_main"
                        app:layout_constraintStart_toStartOf="@+id/fragment_voc_home_pb_main"
                        app:layout_constraintTop_toBottomOf="@+id/divider22" />

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gesamt Fortschritt"
                        android:textColor="@color/text_sub"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@+id/fragment_voc_home_pb_main"
                        app:layout_constraintStart_toStartOf="@+id/fragment_voc_home_pb_main"
                        app:layout_constraintTop_toBottomOf="@+id/fragment_voc_home_pb_main" />

                    <TextView
                        android:id="@+id/fragment_voc_home_tv_quote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75 %"
                        android:textColor="@color/text_main"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/guideline7"
                        app:layout_constraintStart_toStartOf="@+id/guideline7"
                        app:layout_constraintTop_toTopOf="@+id/fragment_voc_home_tv_itemcorrect" />

                    <View
                        android:id="@+id/divider25"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintEnd_toEndOf="@+id/divider22"
                        app:layout_constraintStart_toStartOf="@+id/divider22"
                        app:layout_constraintTop_toBottomOf="@+id/textView36" />

                    <TextView
                        android:id="@+id/fragment_voc_home_tv_itemcorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="14,35"
                        android:textColor="@color/text_main"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/guideline6"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="@+id/guideline6"
                        app:layout_constraintTop_toBottomOf="@+id/divider25" />

                    <TextView
                        android:id="@+id/fragment_voc_home_tv_itemcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15,75"
                        android:textColor="@color/text_main"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/textView40"
                        app:layout_constraintEnd_toStartOf="@+id/guideline8"
                        app:layout_constraintHorizontal_bias="0.6"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="@+id/guideline8"
                        app:layout_constraintTop_toTopOf="@+id/fragment_voc_home_tv_quote" />

                    <TextView
                        android:id="@+id/textView40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Ø Bestehquote"
                        android:textColor="@color/text_sub"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toStartOf="@+id/guideline7"
                        app:layout_constraintStart_toStartOf="@+id/guideline7"
                        app:layout_constraintTop_toBottomOf="@+id/fragment_voc_home_tv_quote" />

                    <TextView
                        android:id="@+id/textView41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:text="Ø Anzahl Richtig"
                        android:textColor="@color/text_sub"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline6"
                        app:layout_constraintStart_toStartOf="@+id/guideline6"
                        app:layout_constraintTop_toBottomOf="@+id/fragment_voc_home_tv_itemcorrect" />

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Ø Geübte Vokabeln"
                        android:textColor="@color/text_sub"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toStartOf="@+id/guideline8"
                        app:layout_constraintStart_toStartOf="@+id/guideline8"
                        app:layout_constraintTop_toBottomOf="@+id/fragment_voc_home_tv_itemcount" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.2" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.8" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:contentPadding="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView43"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:text="Letzte Übung"
                        android:textColor="@color/text_main"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/fragment_voc_home_tv_lastdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Übung vom 01.04.2020 - 14:35"
                        android:textColor="@color/text_sub"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/textView43"
                        app:layout_constraintTop_toBottomOf="@+id/textView43" />

                    <ImageButton
                        android:id="@+id/fragment_voc_home_imagebtn_retry"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="4dp"
                        android:background="?android:attr/selectableItemBackground"
                        app:layout_constraintBottom_toBottomOf="@+id/fragment_voc_home_tv_lastdate"
                        app:layout_constraintDimensionRatio="1f:1f"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView43"
                        app:srcCompat="@drawable/ic_repeat_black_24dp" />

                    <View
                        android:id="@+id/divider26"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragment_voc_home_tv_lastdate" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/fragment_voc_home_rv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:minHeight="100dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider26"
                        tools:itemCount="4"
                        tools:listitem="@layout/item_result_details" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>